<%= form_with model: @customer do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :name_kana %>
    <%= f.text_field :first_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>