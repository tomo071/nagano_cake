<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品編集</h2>
      <% if @item.errors.any? %>
      <div id="error_explanation">
        <h3>
          <%= @item.errors.count %> errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
     <%= form_with model: @item, url: admin_item_path do |f| %>
      <div class="form-group">
        <label>商品画像</label>
        <%= f.file_field :item_image,placeholder: "商品画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label>商品名</label>
        <%= f.text_field :name%>
      </div>
      <div class="form-group">
        <label>商品説明</label>
        <%= f.text_area :introduction%>
      </div>
      <div class="form-group">
        <label>ジャンル</label>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>
      <div class="form-group">
        <label>税抜価格</label>
        <%= f.number_field :price%>
      </div>
      <div class="form-group">
        <label>販売ステータス</label>
        <%= f.radio_button :is_activ, "passive" %>
        <%= f.label :is_activ, "販売停止中" %>

        <%= f.radio_button :is_activ, "active" %>
        <%= f.label :is_activ, "販売中" %>
      </div>


      <div class="form-group">
        <%= f.submit '変更を保存', class:"btn btn-secondary"%>
      <% end %>
      </div>
    </div>
  </div>
</div>
