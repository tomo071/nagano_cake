<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品詳細</h2>
      <div>
        <%= image_tag @item.get_item_image %>
      </div>
      <div>
        <div>
          <h6>商品名</h6>
          <%= @item.name %>
        </div>
        <div>
          <h6>商品説明</h6>
          <%= @item.introduction %>
        </div>
        <div>
          <h6>ジャンル</h6>
          
        </div>
        <div>
          <h6>税込価格</h6>
          <%= @item.price %>
        </div>
        <div>
          <h6>販売ステータス</h6>
          <%= @item.name %>
        </div>
      </div>
      <%= link_to '編集する', edit_admin_item_path,class:"btn btn-secondary"%>
    </div>
  </div>
</div>