<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @item.errors.any? %>
      <div id="error_explanation">
        <h3>
          <%= @item.errors.count %> errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model: @item do |f| %>
      <div class="form-group">
        <label>商品画像</label>
        <%= f.file_field :item_image,placeholder: "商品画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label>商品名</label>
        <%= f.text_field :name%>
      </div>
      <div class="form-group">
        <label>商品説明</label>
        <%= f.text_area :introduction%>
      </div>
      <div class="form-group">
        <label>税抜価格</label>
        <%= f.integer_area :price%>
      </div>
      
      
      <div class="form-group">
        <%= f.submit '新規登録', class:"btn btn-secondary"%>
      <% end %>
      </div>
    </div>
  </div>
</div>
