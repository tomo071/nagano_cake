<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>ジャンル一覧・追加</h1>
      <% if @genre.errors.any? %>
      <div id="error_explanation">
        <h3>
          <%= @gunre.errors.count %> errors prohibited this obj from being saved:
        </h3>
        <ul>
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="form-group">
        <label>ジャンル名</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.submit '新規登録', class:"btn btn-secondary"%>
      </div>
      <% end %>
      <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th　colspan"3"></th>
            </tr>
          </thead>
          <% @genres.each do |genres| %>
          <tbody>
            <tr>
              <td><%= genres.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genres.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
