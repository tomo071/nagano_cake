<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>配送先登録・一覧</h2>
      <%= form_with model: @address, url: public_addresses_path do |f| %>
      <div class="form-group">
        <label>郵便番号</label>
        <%= f.number_field :postal_code %>
      </div>
      <div class="form-group">
        <label>住所</label>
        <%= f.text_field :address%>
      </div>
      <div class="form-group">
        <label>宛名</label>
        <%= f.text_field :name%><%= f.submit"新規登録"%>
      </div>
      <% end %>
    </div>
  </div>
</div>