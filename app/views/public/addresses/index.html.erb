<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>配送先登録・一覧</h2>
        <%= form_with model: @address, url: public_addresses_path do |f| %>
          <div class="form-group">
            <label>郵便番号</label>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <label>住所</label>
            <%= f.text_field :address%>
          </div>
          <div class="form-group">
            <label>宛名</label>
            <%= f.text_field :name%><%= f.submit"新規登録"%>
            <%= f.hidden_field :customer_id, :value=>current_customer.id  %>
          </div>
          <% end %>
          <table class="table">
            <thead>
              <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th　colspan="3"></th>
              </tr>
            </thead>
            <% @addresses.each do |t| %>
            <tbody>
              <tr>
                <td><%= t.postal_code %> </td>
                <td><%= t.address %></td>
                <td><%= t.name %></td>
                <td>
                  <%= link_to "編集する", edit_public_address_path(t.id) %>
                  <%= link_to "削除する", public_address_path(t.id), method: :delete  %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>