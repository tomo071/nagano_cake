<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <h2>注文履歴一覧</h2>
      <table class="table">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <% @orders.each do |orders| %>
          <tbody>
            <tr>
              <td>
                <%= orders.created_at.strftime('%y/%m/%d')%>
              </td>
              <td><%= orders.address_display%></td>
              <td>
                <% orders.order_details.each do |t| %>
                  <%= t.item.name %>
                <% end %>
              </td>
              <td><%= orders.price %></td>
              <td><%= orders.is_activ_i18n %></td>
              <td><%= link_to "表示する", public_order_path(orders.id) %></td>
            </tr>
          </tbody>
          <% end %>
        </table>