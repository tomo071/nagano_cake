<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>会員情報編集</h2>
        <%= form_with model: @customer, url: public_customers_path(current_customer)  do |f| %>

        <div>
          <label>氏名</label>
          <%= f.text_field :first_name %><%= f.text_field :last_name %>
        </div>
        <div>
          <label>フリガナ</label>
          <%= f.text_field :first_name_kana %><%= f.text_field :last_name_kana %>
        </div>
        <div>
          <label>郵便番号</label>
          <%= f.text_field :postal_code %>
        </div>
        <div>
          <label>住所</label>
          <%= f.text_field :address %>
        </div>
        <div>
          <label>電話番号</label>
          <%= f.text_field :telephone_number %>
        </div>
        <div>
          <label>メールアドレス</label>
          <%= f.text_field :email %>
        </div>
        <div>
        <%= f.submit "編集内容を保存", class:"btn btn-secondary" %>
        <% end %>
        <%= link_to "退会する", public_customers_unsubscribe_path %>
        </div>
    </div>
  </div>
</div>