<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to items_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-home"></i>
                  Home
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to cusstommer_path, class:"nav-link text-light" do %>
                  <span class="fa-w-20">
                  <i class="fas fa-users"></i>
                  Users
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-book-open"></i>
                  Books
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-sign-out-alt"></i>
                  Log out
                  </span>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to root_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-home"></i>
                  Home
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-link"></i>
                  About
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-user-plus"></i>
                  Sign up
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path, class:"nav-link text-light" do %>
                  <span class="fa-w-20">
                  <i class="fas fa-sign-in-alt"></i>
                  Log in
                  </span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
