<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "LOGO", root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to admin_items_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-home"></i>
                  商品一覧
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_customers_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-home"></i>
                  会員一覧
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_order_details_path, class:"nav-link text-light" do %>
                  <span class="fa-w-20">
                  <i class="fas fa-users"></i>
                  注文履歴一覧
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to admin_genres_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-book-open"></i>
                  ジャンル一覧
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-sign-out-alt"></i>
                  ログアウト
                  </span>
                  <% end %>
                </li>
              <% elsif customer_signed_in? %>
                <li>
                  <%= link_to "/public/customers/my_page", class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-home"></i>
                  マイページ
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path, class:"nav-link text-light" do %>
                  <span class="fa-w-20">
                  <i class="fas fa-users"></i>
                  商品一覧
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to public_cart_items_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-book-open"></i>
                  カート
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-sign-out-alt"></i>
                  ログアウト
                  </span>
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to homes_about_path, class:"nav-link text-light" do %>
                  <span class="fa-w-18">
                  <i class="fas fa-home"></i>
                  About
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-link"></i>
                  商品一覧
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class:"nav-link text-light" do %>
                  <span class="fa-w-16">
                  <i class="fas fa-user-plus"></i>
                  新規登録
                  </span>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_session_path, class:"nav-link text-light" do %>
                  <span class="fa-w-20">
                  <i class="fas fa-sign-in-alt"></i>
                  ログイン
                  </span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
